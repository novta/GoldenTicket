@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Edit Client"];
}
@using GoldenTicket.Models

@model Client

<form method="post">
	<input asp-for="Id" type="hidden">
	<label>@Localizer["First Name"]</label>
	<input asp-for="FirstName" value="@Model.FirstName">
	<label>@Localizer["Last Name"]</label>
	<input asp-for="LastName" value="@Model.LastName">
	<label>@Localizer["Title"]</label>
	<input asp-for="Title" value="@Model.Title">
	<label>@Localizer["Chair"]</label>
	<input asp-for="Chair" value="@Model.Chair">
	<label>@Localizer["Role"]</label>
	@Html.DropDownListFor(model => model.Role, Model.GetRoles())
	<br />
	<button class="btn" type="submit">@Localizer["Save"]</button>
</form>
