@{
    ViewData["Title"] = "Измени клијента";
}
@using GoldenTicket.Models
@model Client

	<form method="post">
		<input asp-for="Id" type="hidden">
		<label>Име</label>
		<input asp-for="FirstName" value="@Model.FirstName">
		<label>Презиме</label>
		<input asp-for="LastName" value="@Model.LastName">
		<label>Титула</label>
		<input asp-for="Title" value="@Model.Title">
		<label>Катедра</label>
		<input asp-for="Chair" value="@Model.Chair">
		<label>Улога</label>
		<input asp-for="Role" value="@Model.Role">
		<button class="btn" type="submit">Сачувај</button>
	</form>