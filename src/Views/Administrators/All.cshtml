@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer _localizer
@{
	ViewData["Title"] = _localizer["Roles"];
}
@using GoldenTicket.Data
@using GoldenTicket.Models
@using System.Collections.Generic
@model List<Client>

<a asp-action="Add">@_localizer["Add Client"]</a>

<table class="responsive-table highlight">
	<tr>
		<th>@_localizer["Full Name"]</th>
		<th>@_localizer["Employee"]</th>
		<th>@_localizer["Accountant"]</th>
		<th>@_localizer["Secretary of the Department"]</th>
		<th>@_localizer["Secretary of the Scientific and Teaching Council"]</th>
		<th>@_localizer["Head Accountant"]</th>
		<th>@_localizer["Vice Dean for Finance"]</th>
		<th>@_localizer["Administrator"]</th>
	</tr>
	@foreach (var client in Model)
	{
	<tr>
		<th>
			<div class="card-action">
				<a asp-action="Open" asp-route-id="@client.Id">@client.FirstName @client.LastName @client.Title</a>
			</div>
		</th>
		@if (client.Role == Role.Employee)
			{
		<th class="center">&#10004;</th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
			}
			else if (client.Role == Role.FinanceOfficer)
			{
		<th></th>
		<th class="center">&#10004;</th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
			}
			else if (client.Role == Role.SecretaryOfChair)
			{
		<th></th>
		<th></th>
		<th class="center">&#10004;</th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
			}
			else if (client.Role == Role.SecretaryOfScientificTeachingCouncil)
			{
		<th></th>
		<th></th>
		<th></th>
		<th class="center">&#10004;</th>
		<th></th>
		<th></th>
		<th></th>
			}
			else if (client.Role == Role.HeadAccountant)
			{
		<th></th>
		<th></th>
		<th></th>
		<th></th>
		<th class="center">&#10004;</th>
		<th></th>
		<th></th>
			}
			else if (client.Role == Role.ViceDeanForFinance)
			{
		<th></th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
		<th class="center">&#10004;</th>
		<th></th>
			}
			else if (client.Role == Role.Administrator)
			{
		<th></th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
		<th class="center">&#10004;</th>
			}
	</tr>
	}
</table>
