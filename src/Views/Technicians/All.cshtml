@{
    ViewData["Title"] = "All Clients";
}
@using GoldenTicket.Models
@using System.Collections.Generic
@model List<Moderator>

<a asp-action="Add" >Add Moderator</a>

<table class="responsive-table highlight">
    <tr>
        <th>Name</th>
        <th>Experience (years)</th>
        <th>Rate</th>
        <th>Admin</th>
    </tr>
    @foreach (var moderator in Model) {
    <tr>
        <th>@moderator.FirstName @moderator.LastName</th>
        <th>@((int)((DateTime.Now - moderator.DateAdded).TotalDays / 365))</th>
        <th>$@moderator.GetPayRate()</th>
        @if (moderator.IsAdmin) {
        <th>&#10004;</th>
        }
        else {
        <th></th>
        }
    </tr>
    }
</table>
