@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = $"{Model.Client.FirstName} {Model.Client.LastName}";
}
@using GoldenTicket.ViewModels.Clients

@model ClientDetails

<h3>Лични подаци запосленог</h3>
<p>
	@_localizer["Full Name:"] @Model.Client.FirstName @Model.Client.LastName <br>
	@_localizer["Chair:"] @Model.Client.Chair<br>
	@_localizer["Title:"] @Model.Client.Title<br>
	@_localizer["Employment Date:"] @Model.Client.DateAdded.ToString("d")
</p>

<h3>@_localizer["Open Ticket Count:"] @Model.OpenTicketCount</h3>
<table>
	<tr>
		<th>@_localizer["Destination"]</th>
		<th>@_localizer["Institution"]</th>
		<th>@_localizer["Application Date"]</th>
		<th>@_localizer["Urgent"]</th>
	</tr>
	@foreach (var ticket in Model.Tickets) {
	<tr>
		<th>
			<a asp-action="Open" asp-controller="Tickets" asp-route-id="@ticket.Id">@ticket.Destination</a>
		</th>
		<th>@ticket.Institution</th>
		<th>@ticket.DateAdded.ToString("d")</th>
		@if (ticket.IsUrgent)
		{
		<th>&#10004;</th>
		}
		else
		{
		<th></th>
		}
	</tr>
    }
</table>