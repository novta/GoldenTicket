@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Clients"];
}
@using GoldenTicket.ViewModels.Clients
@using System.Collections.Generic
@model IEnumerable<ClientDetails>

@foreach (var client in Model) {
<div class="row">
	<div class="col s12 m6">
		<div class="card grey darken-1 stickey-action hoverable">
			<div class="card-content white-text activator">
				<span class="card-title">@client.Client.FirstName @client.Client.LastName @client.Client.Title</span>
				<p>@client.Client.Chair</p><br>
				<p>@client.Client.Role</p><br>
				<p>@Localizer["Open Tickets:"] @client.OpenTicketCount</p>
			</div>
			<div class="card-action">
				<a asp-action="AddTicket" asp-route-id="@client.Client.Id">@Localizer["Add Ticket"]</a>
				<a asp-action="Open" asp-route-id="@client.Client.Id">@Localizer["Open"]</a>
			</div>
		</div>
	</div>
</div>
}
