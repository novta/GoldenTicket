@{
    ViewData["Title"] = "Клијенти";
}
@using GoldenTicket.Models.ClientsViewModels
@using System.Collections.Generic
@model IEnumerable<ClientDetails>

<a asp-action="Add">Додај клијента</a>

@foreach (var client in Model) {
<div class="row">
    <div class="col s12 m6">
        <div class="card grey darken-1 stickey-action hoverable">
			<div class="card-content white-text activator">
				<span class="card-title">@client.Client.FirstName @client.Client.LastName @client.Client.Title</span>
				<p>@client.Client.Chair</p><br>
				<p>@client.Client.Role</p><br>
				<p>Open Tickets: @client.OpenTicketCount</p>
			</div>
            <div class="card-action">
                <a asp-action="AddTicket" asp-route-id="@client.Client.Id">Додај тикет</a>
                <a asp-action="Open" asp-route-id="@client.Client.Id">Отвори</a>
            </div>
        </div>
    </div>
</div>
}
