@using GoldenTicket.ViewModels.Account
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@model LoginRequest
@{
	ViewData["Title"] = Localizer["Login"];
}

<form method="post">
	<input asp-for="Username" placeholder="@Localizer["Username"]">

	<input asp-for="Password" placeholder="@Localizer["Password"]">
	<p>
		<label>
			<input asp-for="RememberMe" type="checkbox" />
			<span>@Localizer["Remember Me?"]</span>
		</label>
	</p>
	<button class="btn" type="submit">
		@Localizer["Login"]
	</button>
	<div>
		<a asp-action="ForgotPassword">@Localizer["Forgot Password?"]</a>
	</div>
</form>